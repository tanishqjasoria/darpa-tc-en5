  }, {
    "name" : "userId",
    "type" : "string",
    "doc" : "The operating system identifier associated with the user"
  }, {
    "name" : "username",
    "type" : [ "null", "string" ],
    "doc" : "Human-readable string identifier, such as username (Optional)",
